#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>
#include <string.h>
int main() {
    int fd, dup_fd, n;
    char buf[50];
    struct stat s;
    DIR *d;
    struct dirent *de;

    fd = open("demo.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);
    if (fd < 0) { perror("open"); return 1; }

    write(fd, "Hello from UNIX I/O system calls!\n", 34);

    dup_fd = fcntl(fd, F_DUPFD, 0);
    printf("Original FD = %d, Duplicated FD = %d\n", fd, dup_fd);

    lseek(fd, 0, SEEK_SET);             
    n = read(fd, buf, sizeof(buf) - 1); 
    buf[n] = '\0';                       
    printf("File contents: %s\n", buf);

    if (stat("demo.txt", &s) == 0) {
        printf("File size: %ld bytes\n", s.st_size);
        printf("File inode: %ld\n", s.st_ino);
    }
-
    d = opendir(".");
    if (d) {
        printf("\nDirectory listing:\n");
        while ((de = readdir(d)) != NULL) {
            printf("  %s\n", de->d_name);
        }
        closedir(d);
    }
    close(fd);
    close(dup_fd);
    return 0;
}

OUTPUT ;
Original FD = 3, Duplicated FD = 4
File contents: Hello from UNIX I/O system calls!
File size: 34 bytes
File inode: 1234567

Directory listing:
  .
  ..
  demo.txt
  a.out
  ...
