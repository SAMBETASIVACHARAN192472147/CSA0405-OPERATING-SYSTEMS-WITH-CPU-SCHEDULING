#include <stdio.h>
#include <unistd.h>

int main()
{
    pid_t pid;

    pid = fork();

    if (pid < 0) {
        printf("Fork failed\n");
    } 
    else if (pid == 0) {
        printf("Child Process\n");
        printf("Child PID: %d\n", getpid());
        printf("Parent PID: %d\n", getppid());
    } 
    else {
        printf("Parent Process\n");
        printf("Parent PID: %d\n", getpid());
        printf("Parent's Parent PID: %d\n", getppid());
    }
    return 0;
}
OUTPUT :
Parent Process
Parent PID: 62250
Parent's Parent PID: 62243
Child Process
Child PID: 62251
Parent PID: 62250
